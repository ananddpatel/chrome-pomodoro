{
	"manifest_version": 2,

	"name": "Pomodoro Tomato",
	"description": "This extension is a timer based on the Pomodoro Technique",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Tomato: Your Pomodoro Timer",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false,
	},
	// "background": {
	// 	"scripts": ["pomodoroState.js", "breakState.js", "moment.js", "background.js"],
	// 	"persistent": false
	// },
	"permissions": [
		"notifications"
	]
}